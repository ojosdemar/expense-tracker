<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/expenseListFragment">

    <fragment
        android:id="@+id/expenseListFragment"
        android:name="com.example.expensetracker.presentation.list.ExpenseListFragment"
        android:label="Список расходов"
        tools:layout="@layout/fragment_expense_list" >
        <action
            android:id="@+id/action_list_to_add"
            app:destination="@id/addExpenseFragment" />
    </fragment>

    <fragment
        android:id="@+id/addExpenseFragment"
        android:name="com.example.expensetracker.presentation.add.AddExpenseFragment"
        android:label="Добавить расход"
        tools:layout="@layout/fragment_add_expense" />

</navigation>
